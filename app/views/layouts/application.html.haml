!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title nullZone
    = csrf_meta_tags
    = csp_meta_tag
    = favicon_link_tag       'favicon.ico'
    = stylesheet_link_tag    'https://fonts.googleapis.com/css?family=Titillium+Web&display=swap', media: 'all'
    = stylesheet_link_tag    'https://fonts.googleapis.com/icon?family=Material+Icons', media: 'all'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body{ class: "#{controller_name} #{action_name}"  }
  
    %div.main-wrapper
      = yield

    %div.topbar
      %nav.topbar-left
        %a{ href: '/' } nZ

        %a{ href: usuarios_path }
          %span
            %i.fas.fa-users
            USUÁRIOS

        %a{ href: denuncias_path }
          %span
            %i.fas.fa-skull-crossbones
            DENÚNCIAS

      %div.topbar-right
        %form{ action: topicos_path }
          %input{ type: 'text', name: 'query', placeholder: 'Pesquisar' }
          %button
            %i.fas.fa-search

        - if current_user
          %div.logged-in
            %div
              %div.left
                %a{ href: usuario_path(current_user) }<
                  = set_avatar(current_user, size: 30)

              %div.right
                %div
                  Logado como
                  = succeed ',' do
                    = link_to current_user.login, usuario_path(current_user)

                  = link_to deslogar_path, method: :delete do
                    SAIR
                    %i.fas.fa-sign-out-alt

        - else
          %nav
            %a{ href: logar_path }<
              %span
                %i.fas.fa-sign-in-alt
                ENTRAR

            %a{ href: new_usuario_path }<
              %span
                %i.fas.fa-user-plus
                CADASTRO
