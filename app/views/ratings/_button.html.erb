<% if rating.value > 0 %>
  <% i_class = 'fas fa-arrow-up' %>
  <% btn_class = 'positive' %>
  <% btn_text = '+' %>
<% else %>
  <% i_class = 'fas fa-arrow-down' %>
  <% btn_class = 'negative' %>
  <% btn_text = '-' %>
<% end %>

<%= button_to rating, method: :delete, remote: true, class: btn_class do %>
    <%= btn_text %>
    <i class="<%= i_class %>"></i>
<% end %>
