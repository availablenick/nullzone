<% btn_class = 'bg-black bold clear-outline' %>
<% if method == 'delete' %>
  <% if model.value > 0 %>
    <% i_class = 'fas fa-thumbs-up' %>
    <% btn_class = 'positive ' + btn_class %>
    <% btn_text = '+1' %>
  <% else %>
    <% i_class = 'fas fa-thumbs-down' %>
    <% btn_class = 'negative ' + btn_class %>
    <% btn_text = '-1' %>
  <% end %>
<% else %>
  <% btn_class = 'color-white ' + btn_class %>
  <% if value > 0 %>
    <% i_class = 'fas fa-thumbs-up' %>
    <% btn_text = '+1' %>
  <% else %>
    <% i_class = 'fas fa-thumbs-down' %>
    <% btn_text = '-1' %>
  <% end %>
<% end %>

<%= form_with method: method, model: model do |form| %>
  <% if method != 'delete'%>
    <%= form.hidden_field :value, value: value %>
  <% end %>

  <%= form.button class: btn_class do %>
    <i class="<%= i_class %>"></i>
    <span class="d-none d-sm-inline">
      <%= btn_text %>
  <% end %>
<% end %>
