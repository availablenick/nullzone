%h1 Novo tópico

= form_with model: @topico, local: true do |form|
  %p
    = form.label :titulo
    %br/
    = form.text_field :titulo
    
  %p 
    = form.label :mensagem
    %br/
    = form.text_area :mensagem, cols: 100, rows: 20

  %p
    = select('topico', :usuario_id, Usuario.all.collect { |u| [u.nome, u.id] })

  %p
    = form.submit

= link_to 'Voltar para área geral', topicos_path
