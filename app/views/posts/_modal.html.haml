%div.modal.clear-outline.flex-row.h-center{ tabindex: '-1' }
  %div.modal-box.border-rounded.box-shadow.inline-block
    %div.header.flex-row.h-middle-space.v-center
      Remoção

      %button.modal-close.clear-border.clear-outline.font-normal
        %i.fas.fa-times-circle

    %div.content.color-white.font-medium.flex-row.v-middle-space
      %div
        Confirmar remoção?

      %div.flex-row.h-center.v-center
        - an_class = 'bold border-rounded box-shadow clear-border clear-outline fill-parent-width'
        = button_to 'Sim', source_item, method: :delete, remote: remote,
          class: an_class + ' modal-submit'

        %button.modal-close{ class: an_class }
          Não

:javascript
  setUpModal(#{remote});
